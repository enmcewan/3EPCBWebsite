           url("/fonts/NotoSans-VariableFont_wdth,wght.ttf") format("truetype-variations"),
           url("/fonts/NotoSans-VariableFont_wdth,wght.ttf") format("truetype") tech("variations");
      font-weight: 100 1000;
      font-stretch: 25% 150%
    }
    @font-face {
      font-family: "Noto Sans";
      font-style: italic;
      font-display: swap;
      src: local(),
           url("/fonts/NotoSans-Italic-VariableFont_wdth,wght.ttf") format("truetype-variations"),
           url("/fonts/NotoSans-Italic-VariableFont_wdth,wghtt.ttf") format("truetype") tech("variations");
      font-weight: 100 1000;
      font-stretch: 25% 150%
    }
    @font-face {
      font-family: "Noto Sans Mono";
      font-style: normal;
