<!--Facebook preview-->
<meta property="og:url" content="{{ canonical }}" />
<meta property="og:type" content="website" />
<meta property="og:title" content="{{ displaytitle or title }}" />
<meta property="og:description" content="{{ description }}" />
{%- for property in og -%}
    {%- if property.image %}        <meta property="og:image" content="{{ property.image }}" />{% endif %}
    {%- if property.imageType %}    <meta property="og:image:type" content="{{ property.imageType }}" />{% endif %}
    {%- if property.imageWidth %}   <meta property="og:image:width" content="{{ property.imageWidth }}" />{% endif %}
    {%- if property.imageHeight %}  <meta property="og:image:height" content="{{ property.imageHeight }}" />{% endif %}
{%- endfor %}
<!-- Twitter Card Meta Tags -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content="{{ displaytitle or title }}" />
<meta name="twitter:description" content="{{ description }}" />
{%- for property in og -%}
    {%- if property.image %}        <meta name="twitter:image" content="{{ property.image }}" />{% endif -%}
    {%- if property.imageAlt %}    <meta name="twitter:image:alt" content="{{ property.imageAlt }}" />{% endif -%}
{%- endfor %}